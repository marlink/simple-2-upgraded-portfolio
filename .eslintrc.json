{
    "extends": ["standard"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "script"
    },
    "globals": {
        "safeQuery": "readonly",
        "safeQueryAll": "readonly",
        "throttle": "readonly",
        "debounce": "readonly",
        "formatDate": "readonly",
        "validateEmail": "readonly",
        "copyToClipboard": "readonly",
        "safeStorageGet": "readonly",
        "safeStorageSet": "readonly"
    },
  "rules": {
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "prefer-const": "warn",
    "no-var": "error",
    "object-shorthand": "warn",
    "prefer-arrow-callback": "warn",
    "semi": ["error", "never"],
    "no-trailing-spaces": "error",
    "no-void": "off",
    "no-return-assign": "off"
  },
  "ignorePatterns": ["**/*.min.js", "**/*.min.css"]
}
